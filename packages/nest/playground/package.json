{
  "name": "@usex/raft-nestjs-playground",
  "version": "1.0.0",
  "description": "Interactive playground for @usex/raft-nestjs",
  "private": true,
  "scripts": {
    "start": "nest start --watch",
    "start:cluster": "concurrently \"npm:start:node1\" \"npm:start:node2\" \"npm:start:node3\"",
    "start:node1": "cross-env NODE_ID=node-1 HTTP_PORT=3001 nest start --watch",
    "start:node2": "cross-env NODE_ID=node-2 HTTP_PORT=3002 nest start --watch", 
    "start:node3": "cross-env NODE_ID=node-3 HTTP_PORT=3003 nest start --watch",
    "start:monitoring": "concurrently \"npm:start:cluster\" \"npm:start:dashboard\"",
    "start:dashboard": "nest start dashboard --watch",
    "start:cli": "nest start cli",
    "test:load": "artillery run tests/load-test.yml",
    "test:chaos": "node scripts/chaos-test.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.4",
    "@nestjs/core": "^11.1.4",
    "@nestjs/platform-express": "^11.1.4",
    "@nestjs/platform-socket.io": "^11.1.4",
    "@nestjs/websockets": "^11.1.4",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/bull": "^11.0.2",
    "@usex/raft-nestjs": "workspace:*",
    "@usex/raft": "workspace:*",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "bull": "^4.16.5",
    "ioredis": "^5.6.1",
    "socket.io": "^4.8.1",
    "prom-client": "^15.1.3",
    "class-validator": "^0.14.2",
    "class-transformer": "^0.5.1",
    "helmet": "^8.1.0",
    "compression": "^1.8.0",
    "chalk": "^5.4.1",
    "inquirer": "^12.7.0",
    "ora": "^8.2.0",
    "cli-table3": "^0.6.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.4",
    "@types/node": "^24.0.14",
    "@types/express": "^5.0.3",
    "@types/socket.io": "^3.0.2",
    "@types/inquirer": "^9.0.8",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "artillery": "^2.0.23",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}